# ===========================================
# SKILLX BACKEND CONFIGURATION (Production)
# ===========================================
# Add these environment variables in your hosting platform (Render/Railway)

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection (Use MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/skillx?retryWrites=true&w=majority

# JWT Configuration (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="SkillX <your-email@gmail.com>"

EMAIL_FROM_NAME=SkillX
EMAIL_FROM_ADDRESS=noreply@skillx.com

# Frontend URL (Your Vercel deployment URL)
CLIENT_URL=https://your-frontend.vercel.app

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
